<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvAnimalCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDogPic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp" />

            <TextView
                android:id="@+id/tvDogName"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/ivDogPic" />

            <TextView
                android:id="@+id/tvDogContact"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ivDogPic"
                android:layout_alignRight="@+id/ivDogPic"
                android:layout_alignEnd="@+id/ivDogPic" />

            <TextView
                android:id="@+id/tvDogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDogName" />

            <Button
                android:id="@+id/bAdopted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDogDescription"
                android:background="@color/adoptedColor"
                android:text="Adopted" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>