<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/ivDogPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_btn" />

    <TextView
        android:id="@+id/tvDogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDogPic"
        android:paddingBottom="@dimen/singlePadding"
        android:paddingEnd="@dimen/singlePadding"
        android:paddingLeft="@dimen/singlePadding"
        android:paddingRight="@dimen/singlePadding"
        android:paddingStart="@dimen/singlePadding"
        android:textSize="@dimen/singleTxtSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDogContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/singlePadding"
        android:paddingEnd="@dimen/singlePadding"
        android:paddingLeft="@dimen/singlePadding"
        android:paddingRight="@dimen/singlePadding"
        android:paddingStart="@dimen/singlePadding"
        android:layout_below="@+id/tvDogName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvDogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/singlePadding"
        android:paddingEnd="@dimen/singlePadding"
        android:paddingLeft="@dimen/singlePadding"
        android:paddingRight="@dimen/singlePadding"
        android:paddingStart="@dimen/singlePadding"
        android:layout_below="@id/tvDogContact"
        />


    <Button
        android:id="@+id/bDogAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/dog_has_been_successfully_adopted"
        android:background="@color/cardview_light_background"
        android:visibility="invisible" />



</RelativeLayout>
