<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivDogImage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tvDogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@id/ivDogImage"/>

    <TextView
        android:id="@+id/tvDogContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:layout_below="@id/tvDogName"/>

    <TextView
        android:id="@+id/tvDogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_below="@id/tvDogContact"/>

    <Button
        android:id="@+id/bDogAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Dog has been successfully adopted!"
        android:visibility="invisible"/>

</RelativeLayout>